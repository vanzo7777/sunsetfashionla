{% render 'style-navigation' %}

<div class="is-sticky">
	<div class="wrapper-navigation navigation-06" data-sticky-pc>
		{% if section.settings.display_fixtop_menu %}
		<div class="main-menu jas-mb-style">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="header-panel-bt">
							<div class="header-panel-bt-wrap">
								<div class="mb-area header-bottom-left">
									<a href="{{routes.root_url}}" class="logo"><img src="{{ section.settings.logo | img_url: '400x'}}" alt=""></a>
								</div>
								<div class="header-bottom-midle">
									<div class="top-text-close">
										<a href="#" class="icon-nav close-menu-mb" title="Menu Mobile Icon" data-menu-mb-toogle>
											<span class="icon-line"></span>
										</a>
									</div>
									<nav class="nav-bar" role="navigation">
										{% render 'site-nav' %}
									</nav>

									{% if settings.header_style_mobile == 'header_mobile_3' %}
										{% if shop.customer_accounts_enabled %}
										<div class="customer-links">
										{% if customer %}
										<a class="acc-links text-hover acc-logout" id="customer_logout_link" href="{{ routes.account_logout_url }}" {% if settings.enable_multilang %}data-translate="layout.customer.log_out"{% endif %}>
											{{ 'layout.customer.log_out' | t }}
										</a>
										<span> / </span>
										<a class="acc-links text-hover acc-title" href="{{ routes.account_url }}"{% if settings.enable_multilang %} data-translate="customer.account.title"{% endif %}>
											{{ 'customer.account.title' | t }}
										</a>
										
										{% else %}  
										
										<a class="acc-links text-hover acc-sign-in" id="customer_login_link" href="{{ routes.account_login_url }}" {% if settings.enable_multilang %}data-translate="customer.login.login"{% endif %}>
											{% render 'icon-user-2' %}
											{{ 'customer.login.login' | t }}
										</a>
										
										{% endif %}                                   
										</div>
										{% endif %}
									{% endif %}

								</div>
							</div>
								
							<div class="header-bottom-right">
							{% if settings.enable_search %}
								<div class="nav-search">                    
									{% render 'search-bar-05' %}
								</div>
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	
		
		<div class="fixed-right-menu">
			<div class="cart-fixed cart-icon"{% if settings.header_layout == '02' or settings.header_layout == '03' or settings.header_layout == '05' or settings.header_layout == '06' %} data-cart-header-02 {% endif %}>             
				<a href="javascript:void(0)" title="Cart Icon" {% if settings.header_layout == '02' or settings.header_layout == '03' or settings.header_layout == '05' or settings.header_layout == '06' %} data-cart-toggle {% endif %}>
					{% render 'icon-cart-2' %}
					<span class="cartCount" data-cart-count>
						{{ cart.item_count }}
					</span>
				</a>
			</div>
		</div>
		{% endif %}
	</div>
</div>


<style>
.site-nav .menu-lv-1.active_sale > a {
	color: {{ section.settings.color_text_sale_item }};
}
.navigation-06 .input-group-field  {
	font-size: {{ section.settings.font_size_mnu_lv1 }};
}

@media (min-width:1200px) {
    .site-nav .mega-menu .style_5 .mega-banner.skin-2:after,.site-nav .mega-menu .style_5 .mega-banner.skin-3.skin-3-product:after, .site-nav .mega-menu .style_5 .mega-banner.skin-1-product .col-left:after, .site-nav .mega-menu .style_5 .mega-banner.skin-1-product .col-left:before, .site-nav .mega-menu .style_5 .mega-banner.skin-2:before,.site-nav .mega-menu .style_5 .mega-banner.skin-3.skin-3-product:before {
    	background-color: {{ section.settings.border_bg_style_new }} !important;
    }
    .site-nav .mega-menu .style_5 .mega-banner.skin-1-product .col-left,.site-nav .mega-menu .style_5 .mega-banner.skin-2,.site-nav .mega-menu .style_5 .mega-banner.skin-3.skin-3-product {
    	border-color: {{ section.settings.border_bg_style_new }};
    }
    .site-nav .mega-menu .style_5 .mega-banner.skin-3 .col-product .slick-arrow {
    	background: {{ section.settings.bg_color_arrow }};
    	border: {{ section.settings.bg_color_arrow }};
    }
    .site-nav .mega-menu .style_5 .mega-banner.skin-3 .col-product .slick-arrow svg {
    	color: {{ section.settings.color_arrow }};
    }

    .site-nav .menu-lv-1>a span:hover {
    	border-color: {{ section.settings.hover_border_color_mnu_lv1 }};
    }
}
</style>

