<style>
.star-rating_container {
    display: flex;
    justify-content: center;
    margin-bottom: 30px;
}
    
.star-rating{
  font-size:0;
  white-space:nowrap;
  display:inline-block;
  justify-content: center;
  width:150px;
  height:30px;
  overflow:hidden;
  position:relative;
  background:
      url('data:image/svg+xml;base64,');
  background-size: contain;
}
.star-rating  i{
    opacity: 0;
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 20%;
    z-index: 1;
    background: 
        url('data:image/svg+xml;base64,');  
    background-size: contain;
}
.star-rating input{ 
-moz-appearance:none;
-webkit-appearance:none;
opacity: 0;
display:inline-block;
width: 20%;
height: 100%; 
margin:0;
padding:0;
z-index: 2;
position: relative;
}
.star-rating input:hover + i,
.star-rating input:checked + i{
    opacity:1;    
}

.star-rating i ~ i{
width: 40%;
}
.star-rating i ~ i ~ i{
width: 60%;
}
.star-rating i ~ i ~ i ~ i{
width: 80%;
}
.star-rating i ~ i ~ i ~ i ~ i{
width: 100%;
}

.rating__title {
    margin-bottom: 20px;
    font-size: 24px;
    font-weight: 700;
    text-align: center;
}

</style>

<div class="rating">
    <div class="rating__title">Rate this article, if you like it</div>
    
    <div class="star-rating_container">
        <span class="star-rating">
            <input type="radio" name="rating" value="1"><i></i>
            <input type="radio" name="rating" value="2"><i></i>
            <input type="radio" name="rating" value="3"><i></i>
            <input type="radio" name="rating" value="4"><i></i>
            <input type="radio" name="rating" value="5"><i></i>
        </span>
    </div>
    
</div>

<script>
    const radioButtons = document.querySelectorAll('.star-rating input')
    if (localStorage.getItem('rating') !== 'true') {
        
        radioButtons.forEach(input => {
            input.addEventListener('change', () => {
                localStorage.setItem('rating', 'true')
                localStorage.setItem('ratingValue', input.value)
                input.closest('.star-rating').classList.add('pe-n')
            })
        })
    } else {
        document.querySelector('.star-rating').classList.add('pe-n')

        radioButtons.forEach(input => {
            if (input.value == localStorage.getItem('ratingValue')) {
                input.checked = true
            }
        })
    }
    
</script>

<script type="application/ld+json">
    {
     "@context": "http://schema.org",
      "@type": "CreativeWorkSeries",
      "name": "{{article.title}}",
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "{{ article.metafields.custom.rating_value }}",
        "reviewCount": {{ article.metafields.custom.review_count }}
        }
    }
    </script>
    